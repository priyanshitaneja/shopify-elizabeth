.flex-holder {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: baseline; }

.hero-cover {
  height: 100%;
  min-height: 100vh;
  background-position: center;
  background-repeat: no-repeat;
  background-size: cover; }

.hero-content {
  text-align: center;
  max-width: 40rem;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%); }
  .hero-content h1,
  .hero-content h2 {
    color: white; }
  .hero-content h1 {
    font-weight: 200;
    text-transform: uppercase; }
  .hero-content .h2 {
    margin-bottom: 1rem; }

