.search-template {
  max-width: 20rem;
  margin: auto; }
  @media (min-width: 48rem) {
    .search-template {
      max-width: 40rem; } }
  .search-template h1 {
    text-align: center;
    font-size: 1.2rem; }

.result-holder {
  width: 100%;
  margin-top: 0.8rem; }
  .result-holder .result-item {
    display: flex;
    flex-direction: column;
    padding: 0.375rem 0;
    line-height: 1.5rem; }
    @media (min-width: 48rem) {
      .result-holder .result-item {
        flex-direction: row; } }
    .result-holder .result-item .featured-search-image {
      margin: 0 0 1.2rem 0;
      display: block;
      width: 100%; }
      @media (min-width: 48rem) {
        .result-holder .result-item .featured-search-image {
          margin: 0 1.2rem 0 0;
          max-width: 15rem; } }
      .result-holder .result-item .featured-search-image img {
        width: 100%; }
    .result-holder .result-item h5 {
      margin-bottom: 0.8rem; }
    .result-holder .result-item p {
      font-size: 0.875rem;
      line-height: 1.5rem; }

