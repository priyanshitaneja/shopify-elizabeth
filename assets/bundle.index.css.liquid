.cover {
  text-align: center; }
  .cover .cover-text {
    text-align: center;
    max-width: 450px;
    margin: auto; }
    @media (min-width: 64rem) {
      .cover .cover-text {
        max-width: 385px;
        text-align: left; } }
    .cover .cover-text h1 {
      line-height: 2rem;
      font-size: 2rem; }
      @media (min-width: 64rem) {
        .cover .cover-text h1 {
          line-height: 3rem;
          font-size: 2.5rem; } }
  .cover .reviews {
    margin-bottom: 1rem; }
  @media (max-width: 63.99rem) {
    .cover .cover-image {
      margin-top: 2rem; } }
  .cover.front-page {
    padding-top: 8rem;
    padding-right: 1rem;
    padding-bottom: 4rem;
    padding-left: 1rem;
    background-image: url("./hero-fs.png");
    background-repeat: no-repeat;
    background-size: cover;
    background-position: left;
    background-color: #f7f4ee; }
    @media (min-width: 64rem) {
      .cover.front-page {
        padding-top: 12rem;
        padding-right: 2rem;
        padding-bottom: 8rem;
        padding-left: 2rem;
        background-position: center; } }
  .cover.collections, .cover.about {
    padding-top: 4rem;
    padding-right: 1rem;
    padding-bottom: 4rem;
    padding-left: 1rem;
    border-bottom: 1px solid #D3D3D3; }
    @media (min-width: 64rem) {
      .cover.collections, .cover.about {
        border-bottom: none;
        padding: 0; } }
    .cover.collections .container-fluid, .cover.about .container-fluid {
      padding: 0; }
      .cover.collections .container-fluid .row,
      .cover.collections .container-fluid .col, .cover.about .container-fluid .row,
      .cover.about .container-fluid .col {
        margin: 0; }
    .cover.collections .cover-image, .cover.about .cover-image {
      display: none; }
      @media (min-width: 64rem) {
        .cover.collections .cover-image, .cover.about .cover-image {
          display: block; }
          .cover.collections .cover-image img, .cover.about .cover-image img {
            width: 100%; } }
    @media (min-width: 64rem) {
      .cover.collections .cover-text h1, .cover.about .cover-text h1 {
        line-height: 3.5rem;
        font-size: 3.1rem; } }

.content-section {
  padding-top: 4rem; }
  .content-section .content {
    max-width: 36.5rem;
    margin: 3rem auto 0;
    padding: 0 1rem;
    text-align: center; }
    @media (min-width: 64rem) {
      .content-section .content {
        text-align: left;
        max-width: 26.5rem;
        margin: 0 auto;
        padding: 0; } }
    .content-section .content .quote {
      font-size: 0.8rem;
      font-weight: 700;
      line-height: 1.5;
      color: #c8102e;
      text-transform: uppercase;
      letter-spacing: 1px;
      margin-bottom: 1rem; }
    .content-section .content h2 {
      line-height: 1.3; }
    .content-section .content p {
      line-height: 1.8; }
    .content-section .content .btn {
      width: 100%;
      max-width: 200px; }
  @media (max-width: 63.99rem) {
    .content-section.right-aligner .row .col:first-child {
      order: 1; } }

